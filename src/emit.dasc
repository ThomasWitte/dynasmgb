bool inst_add16(dasm_State **Dst, gb_instruction *inst, uint64_t* cycles) {
    | print "ADD16"
    switch(inst->op1) {
    case REG_HL:
        | mov tmp2, xH
        | shl tmp2, 8
        | mov tmp1, xL
        | add tmp1, tmp2
        switch(inst->op2) {
        case REG_BC:
            | mov tmp3, xB
            | shl tmp3, 8
            | mov tmp2, xC
            | add tmp2, tmp3
            break;
        case REG_DE:
            | mov tmp3, xD
            | shl tmp3, 8
            | mov tmp2, xE
            | add tmp2, tmp3
            break;
        case REG_HL:
            | mov tmp2, tmp1
            break;
        case REG_SP:
            | mov tmp2, xSP
            break;
        default:
            printf("Invalid 2nd operand to ADD16\n");
            return false;
        }
        | add tmp1, tmp2
        | mov L, tmp1b
        | shr tmp1, 8
        | mov H, tmp1b
        break;
    case REG_SP:
        if(inst->op2 == IMM8) {
            | add SP, inst->args[1];
        } else {
            printf("Invalid 2nd operand to ADD16\n");
            return false;
        }
        break;
    default:
        printf("Invalid 1st operand to ADD16\n");
        return false;
    }
    *cycles += inst->cycles;
    return true;
}

