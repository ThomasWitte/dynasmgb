bool inst_dec16(dasm_State **Dst, gb_instruction *inst, uint64_t* cycles) {
    | print "DEC16"
    switch(inst->op1) {
    case REG_BC:
        | mov tmp2, xB
        | shl tmp2, 8
        | mov tmp1, xC
        | add tmp1, tmp2
        | dec tmp1
        | mov C, tmp1b
        | shr tmp1, 8
        | mov B, tmp1b
        break;
    case REG_DE:
        | mov tmp2, xD
        | shl tmp2, 8
        | mov tmp1, xE
        | add tmp1, tmp2
        | dec tmp1
        | mov E, tmp1b
        | shr tmp1, 8
        | mov D, tmp1b
        break;
    case REG_HL:
        | mov tmp2, xH
        | shl tmp2, 8
        | mov tmp1, xL
        | add tmp1, tmp2
        | dec tmp1
        | mov L, tmp1b
        | shr tmp1, 8
        | mov H, tmp1b
        break;
    case REG_SP:
        | dec SP
        break;
    default:
        printf("Invalid operand to DEC16\n");
        return false;
    }
    *cycles += inst->cycles;
    return true;
}

